{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "packages",
  "projects": {
    "my-app": {
      "projectType": "application",
      "schematics": {},
      "root": "",
      "sourceRoot": "src",
      "prefix": "my-app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/my-app",
            "index": "app/src/index.html",
            "main": "app/src/main.ts",
            "polyfills": "app/src/polyfills.ts",
            "tsConfig": "app/tsconfig.json",
            "aot": true,
            "assets": [
              "src/favicon.ico",
              "src/assets"
            ],
            "styles": [],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "app/src/environments/environment.ts",
                  "with": "app/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "my-app:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "my-app:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "my-app:build"
          }
        }
      }
    },
    "button": {
      "projectType": "library",
      "root": "packages/button",
      "sourceRoot": "packages/button/src",
      "prefix": "my",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/button/tsconfig.json",
            "project": "packages/button/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/button/tsconfig.json"
            }
          }
        }
      }
    },
    "hello": {
      "projectType": "library",
      "root": "packages/hello",
      "sourceRoot": "packages/hello/src",
      "prefix": "my",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/hello/tsconfig.json",
            "project": "packages/hello/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/hello/tsconfig.json"
            }
          }
        }
      }
    },
    "test-utils": {
      "projectType": "library",
      "root": "packages/test-utils",
      "sourceRoot": "packages/test-utils/src",
      "prefix": "my",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "packages/test-utils/tsconfig.json",
            "project": "packages/test-utils/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/test-utils/tsconfig.json"
            }
          }
        }
      }
    }},
  "defaultProject": "my-app"
}
