{
  "packages": [
    "packages/*",
    "apps/*"
  ],
  "command": {
    "publish": {
      "contents": "dist",
      "conventionalCommits": true
    },
    "bootstrap": {
      "hoist": true,
      "strict": true
    },
    "clean": {
      "yes": true
    },
    "run": {
      "stream": true
    }
  },
  "version": "independent"
}
